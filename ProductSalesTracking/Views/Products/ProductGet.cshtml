@model ProductSalesTracking.Models.AdoEntity.TblProduct
@{
    ViewBag.Title = "ProductGet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateProduct", "Products", FormMethod.Post))
{
    <h1>Product Get</h1>
    @Html.HiddenFor(x => x.id, new { @class = "form-control" })
    <br />
    <label>Product Name</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Product Brand</label>
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
    <br />
    <label>Product Stock</label>
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <label>Product BuyPrice</label>
    @Html.TextBoxFor(x => x.BuyPrice, new { @class = "form-control" })
    <br />
    <label>Product SellPrice</label>
    @Html.TextBoxFor(x => x.SellPrice, new { @class = "form-control" })
    <br />
    <label>Product Category</label>
    @Html.DropDownListFor(x => x.TblCategory.id, (List<SelectListItem>)ViewBag.drop, new { @class = "form-control" })
    <br />

    <button class="btn btn-warning">Update</button>
}

